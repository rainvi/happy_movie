<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

<settings>
<setting name="logImpl" value="LOG4J"/>
</settings>

<typeAliases>
	<typeAlias type="dto.BookmarkDTO" alias="bookmarkdto"/>
	<typeAlias type="dto.ImageDTO" alias="imagedto"/>
	<typeAlias type="dto.MovieDTO" alias="moviedto"/>
	<typeAlias type="dto.UserDTO" alias="userdto"/>
	<typeAlias type="dto.VideoDTO" alias="videodto"/>
</typeAliases>
	
	<environments default="emp">
  	<environment id="emp">
  		<transactionManager type="JDBC" />
  		<dataSource type="POOLED">
  			<property name="driver" value="com.mysql.cj.jdbc.Driver"/>
  			<property name="url" value="jdbc:mysql://127.0.0.1:3307/emp"/>
  	  		<property name="id" value="emp"/>
  	  		<property name="pw" value="emp"/>				
  		</dataSource>
  	</environment>
  </environments>
	
	<mappers>
		<mapper resource = "mappers/user_mapper.xml"/>
	</mappers>
</configuration>